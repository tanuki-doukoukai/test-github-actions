name: Create PR deploy to staging

on:
  pull_request:
    types:
      - closed
    branches:
      - deploy

jobs:
  create-pull-request:
    if: >
      github.event.pull_request.merged == true &&
      github.event.pull_request.head.ref != 'staging'
    env:
      HEAD_BRANCH: deploy
      BASE_BRANCH: staging
    uses: ./.github/workflows/create-pull-request.yml
    with:
      head_branch: ${{ env.HEAD_BRANCH }}
      base_branch: ${{ env.BASE_BRANCH }}
      pr_title: "$${ env.HEAD_BRANCH } -> ${{ env.BASE_BRANCH }}(#${{ github.event.pull_request.number }})"
    secrets:
      app_id: ${{ secrets.TANUKI_2_APP_ID }}
      app_private_key: ${{ secrets.TANUKI_2_PRIVATE_KEY }}

    